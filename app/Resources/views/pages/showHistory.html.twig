    <div class="container">

      <div class="starter-template">
        {% if error == false %}

        <h1>History <a class="btn btn-danger" href="{{ path('homepage') }}"> <i class="fa fa-arrow-left"> </i> Back </a></h1>
        <p class="lead">
          <table class="table">
            <thead>
              <tr>
                <th> Currency </th>
                <th> Date </th>
                <th> Value </th>
              </tr>
            </thead>
            <tbody>
              {% for curr in currency.rates %}
                <tr> 
                  <td>{{curr.no}}</td>
                  <td>{{curr.effectiveDate}}</td>
                  <td>{{curr.mid}}</td>
                </tr>
              {% endfor %} 
            </tbody>
          <table>
        </p>

        {% else %}
          <h1>{{message}}</h1>

      {% endif %}

      </div>


    </div><!-- /.container -->

